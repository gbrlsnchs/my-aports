pkgname=my-aports-key
pkgver=2.022
pkgrel=0
pkgdesc="Public key for https://aports.gsr.dev"
url="https://aports.gsr.dev/keys/$CARCH"
arch="noarch"
license="MIT"
options="!check"
source="
	x86_64.tar
	aarch64.tar
	"

package() {
	install -Dm644 "$srcdir/public/keys/$CARCH"/*rsa.pub -t "$pkgdir"/etc/apk/keys/
}

